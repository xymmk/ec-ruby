<section class="vh-100" style="background-color: #eee;">
   <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">ユーザ登録</p>
                <!-- 登録が成功となるか確認 -->
                <% if flash[:success] %>
                  <div class="container h-100">
                    <div class="alert alert-success text-center" role="alert">
                      <%= flash[:success] %>
                    </div>
                  </div>
                <% else %>
                  <!-- 登録が成功しなかった場合の処理 -->
                  <form class="mx-1 mx-md-4" action="/user/create" method="post">

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <input type="text" id="name" class="form-control" name="name"/>
                      <label class="form-label" for="name">ユーザ名</label>
                      <% if flash[:errors] && flash[:errors][:name] %>
                        <span class="text-danger"><%= flash[:errors][:name] %></span>
                      <% end %>
                    </div>
                  </div>

        

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <input type="password" id="password" class="form-control" name="password"/>
                      <label class="form-label" for="password">パスワード</label>                    
                      <% if flash[:errors] && flash[:errors][:password] %>
                        <span class="text-danger"><%= flash[:errors][:password] %></span>
                      <% end %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <input type="password" id="repeat_password" class="form-control" name="repeat_password"/>
                      <label class="form-label" for="repeat_password">パスワード確認</label>
                      <% if flash[:errors] && flash[:errors][:repeat_password] %>
                        <span class="text-danger"><%= flash[:errors][:repeat_password] %></span>
                      <% end %>
                    </div>
                  </div>  

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                            <div data-controller="user--birth-date">
                        <input type="text" id="birth_date" data-user--birth-date-target="input" class="form-control" name="birth_date"/>
                        <label class="form-label" for="birth_date">生年月日</label>
                        <% if flash[:errors] && flash[:errors][:birth_date] %>
                          <span class="text-danger"><%= flash[:errors][:birth_date] %></span>
                        <% end %>
                      </div>

                    </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button  type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg">登録</button>
                  </div>

                  </form>
                <% end %>
              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
