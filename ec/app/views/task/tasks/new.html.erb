<div class="container mt-4">
    <div class="mb-3">
        <p class="text-end">新規タスク</p>
    </div>

       <form action="/task/create" method="post">
        <div class="mb-3">
            <label for="task_name" class="form-label">タスク名</label>
            <input type="text" name="task_name" id="task_name" class="form-control" placeholder="タスク名を入力してください" required maxlength="500">
        </div>

        <div class="mb-3">
            <label for="task_description" class="form-label">タスク内容</label>
            <textarea name="task_description" id="task_description" class="form-control" placeholder="タスク内容を入力してください" required maxlength="500" rows="4"></textarea>
        </div>

        <div class="mb-3">
            <label for="task_priority" class="form-label">優先度</label>
            <select name="task_priority" id="task_priority" class="form-select" required>
                <option value="" disabled selected>優先度を選択してください</option>
                <option value="3">HIGH</option>
                <option value="2">MEDIUM</option>
                <option value="1">LOW</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="task_status" class="form-label">ステータス</label>
            <select name="task_status" id="task_status" class="form-select" required>
                <option value="" disabled selected>ステータスを選択してください</option>
                <option value="3">未着手</option>
                <option value="2">進行中</option>
                <option value="1">完了</option>
            </select>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary me-2">作成</button>
            <a href="/tasks" class="btn btn-secondary">キャンセル</a>
        </div>
    </form>

</div>
